<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title><%= title %></title>
    <style>
      body { font-family: 'Segoe UI', sans-serif; margin: 2rem; background: #fefae0; }
      header { border-left: 4px solid #f0a500; padding-left: 1rem; }
      li { margin-bottom: 0.35rem; }
    </style>
  </head>
  <body>
    <header>
      <p><strong><%= title %></strong></p>
      <p><%= description %></p>
    </header>
    <section>
      <h2>Checklist</h2>
      <ol>
        <% steps.forEach(function(step) { %>
          <li><%= step %></li>
        <% }) %>
      </ol>
    </section>
    <section>
      <h2>Manifest tags</h2>
      <ul>
        <% (manifest.tags || []).forEach(function(tag) { %>
          <li><code><%= tag %></code></li>
        <% }) %>
      </ul>
    </section>
  </body>
</html>
